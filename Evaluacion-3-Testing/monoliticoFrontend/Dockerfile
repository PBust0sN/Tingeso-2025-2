# Etapa base para pasos comunes
FROM node:22 as base
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .

# Etapa de desarrollo
FROM base as dev
CMD ["npm", "run", "dev"]

# Etapa de construcciÃ³n
FROM base as build
RUN npm run build

# Etapa de producciÃ³n
FROM nginx:alpine
# ðŸ”¥ BORRA el default de nginx
RUN rm /etc/nginx/conf.d/default.conf

# ðŸ”¥ COPIA EL TUYO
COPY nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]